<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="320sp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/background_top"
                android:centerColor="@color/background_center"
                android:startColor="@color/background_bottom" />
        </shape>
    </item>
    <item
        android:height="181sp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/background_bottom"
                android:startColor="@color/background_bottom" />
        </shape>
    </item>
</layer-list>