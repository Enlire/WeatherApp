    <style name="Widget.MyTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Цвет текста и другие атрибуты для кнопок "ОК" и "Отмена" -->
        <item name="android:textColorPrimary">@color/items</item>
        <item name="android:colorBackground">@color/items</item>
    </style>

    <style name="RoundedSquareShape">
        <item name="cornerSize">20%</item>
    </style>
</resources>